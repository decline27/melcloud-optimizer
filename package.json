{
  "name": "com.melcloud.optimize",
  "version": "12.5.0",
  "description": "Heat Pump Optimizer for Homey SDK 3.0 (TypeScript)",
  "main": "index.js",
  "scripts": {
    "build": "tsc && homey app build",
  "build:check": "tsc --noEmit",
  "lint": "eslint . --ext .ts,.js",
  "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "build:ts": "tsc",
    "build:homey": "homey app build",
    "start": "homey app run",
    "dev": "homey app run --debug",
    "test": "jest",
    "test:unit": "jest test/unit/",
    "test:integration": "jest test/integration/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "clean": "rm -rf .homeybuild coverage",
  "ci": "npm run lint && npm run build:check && npm test",
    "validate": "homey app validate",
    "homey:install": "homey app install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node-fetch": "^2.6.12",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.3.2",
  "typescript": "^5.8.3",
  "eslint": "^8.50.0",
  "prettier": "^2.8.8",
  "@typescript-eslint/parser": "^6.2.0",
  "@typescript-eslint/eslint-plugin": "^6.2.0"
  },
  "dependencies": {
    "cron": "^3.1.7",
    "luxon": "^3.4.4"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
