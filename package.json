{
  "name": "com.melcloud.optimize",
  "version": "12.5.0",
  "description": "Heat Pump Optimizer for Homey SDK 3.0 (TypeScript)",
  "main": "index.js",
  "scripts": {
    "build": "tsc && homey app build",
    "build:ts": "tsc",
    "build:homey": "homey app build",
    "start": "homey app run",
    "dev": "homey app run --debug",
    "test": "jest",
    "test:unit": "jest --config jest.config.unit.js",
    "test:unit:ci": "jest --config jest.config.unit.js --runInBand",
    "test:full": "jest --config jest.config.js",
    "test:integration": "jest test/integration/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "clean": "rm -rf .homeybuild coverage results",
    "simulate": "node scripts/simulate.js --data data/timeseries.csv --config data/config.yaml --output results/",
    "validate": "homey app validate",
    "homey:install": "homey app install"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "cron": "^3.1.7",
    "luxon": "^3.4.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
